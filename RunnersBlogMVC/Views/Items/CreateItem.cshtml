@using RunnersBlogMVC.DTO
@model ItemDto
@{
    ViewData["Title"] = "Create";
}
<h1>
    Create Item
</h1>
<form asp-controller="Items" asp-action="CreateItem" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add new shoes</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create Item</button>
        <a asp-controller="Items" asp-action="GetAllItems" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
