@using MongoDB.Driver
@using RunnersBlogMVC.Controllers
@using RunnersBlogMVC.DTO
@using RunnersBlogMVC.Repositories
@{
    ViewData["Title"] = "Items page";
}
<h1>All Items</h1>
<div>
</div>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Running Shoes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="CreateItem" class="btn btn-primary">
                <em class="bi bi-bag-plus-fill"></em> &nbsp; Create New Shoe
            </a>
        </div>
    </div>
</div>
<br />

<aria-label>Stock of available shoes</aria-label>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name of Shoe
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in ViewBag.Items)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Price
                </td>
                @{
                    if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Items" asp-action="EditItem" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <em class="bi bi-pencil-square"></em>Edit</a>
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Items" asp-action="DeleteItem" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <em class="bi bi-trash3"></em>Delete</a>
                            </div>
                        </td>
                        <td>
                            @obj.Id
                        </td>
                        <td>
                            @obj.CreatedDate
                        </td>
                    }
                }

            </tr>
        }
    </tbody>

</table>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}